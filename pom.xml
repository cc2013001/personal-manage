	</dependencyManagement>
	
	
	<dependencies>
	    <dependency>
	        <groupId>org.apache.commons</groupId>
	        <artifactId>commons-lang3</artifactId>
	    </dependency>
		<dependency>
			<groupId>junit</groupId>
